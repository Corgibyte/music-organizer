@using MusicOrganizer.Models;

@{
  Layout = "_Layout";
}

<h1>Artists</h1>

@if (@Model.Count == 0)
{
  <h3>No artists have been added yet!</h3>
}

@foreach (Artist artist in Model)
{
  <h3><a href='/artists/@artist.Id'>@artist.Name</a></h3>
}

<p><a href='/artists/new'>Add a new artist</a></p>
<form method='post' action='/artists/delete'>
  <button type='submit'>Delete All Artists</button>
</form>
<p><a href='/'>Home</a></p>